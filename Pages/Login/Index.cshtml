@page
@model QuizManager.Pages.Login.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="UserLogin.InputUserName" class="control-label"></label>
                <input asp-for="UserLogin.InputUserName" class="form-control" />
                <span asp-validation-for="UserLogin.InputUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLogin.InputPassword" class="control-label"></label>
                <input asp-for="UserLogin.InputUserName" class="form-control" readonly />
                <span asp-validation-for="UserLogin.InputUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
